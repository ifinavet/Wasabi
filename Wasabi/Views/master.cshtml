@using Wasabi.ViewModels
@inherits UmbracoViewPage;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Model.Name</title>
    @if (!IsSectionDefined("Head"))
    {
        string description = Model.Value<string>("metaDescription") ?? Model.Root().Value<string>("metaDescription")!;
        <meta name="description" content="@description"/>
    }

    @* Main style *@
    <link rel="stylesheet" type="text/css"
          href="@Url.Content("~/assets/css/site.css")"
          asp-append-version="true"/>

    @* Google material symbols *@
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=chevron_left,chevron_right,content_copy,event,fork_spoon,group,map,schedule"/>

    @* Qr code scanner *@
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

    @* Page specific meta data *@
    @await RenderSectionAsync("Head", false)

    @await Html.PartialAsync("Header", new HeaderViewModel { PageUrl = Model.Url() })
</head>
<body>
@* Header *@

<svg width="0" height="0">
    <defs>
        <clipPath id="curveClip" clipPathUnits="objectBoundingBox">
            <path d="M0,0 L0.8,0 Q1.1,0.5 0.8,1 L0,1 Z"/>
        </clipPath>
    </defs>
</svg>

@* Body *@
<main id="app">
    @RenderBody()
</main>

@* Footer *@
<footer>
    <div class="footer-container footer-split">
        <div class="footer-information">
            @Model.Root().Value("FooterInformation")
        </div>
        <div class="footer-link">
            <a href="/personvernerklaering">Personvernerkl√¶ring</a>
            <a href="/vedtekter">Vedtekter</a>
        </div>
    </div>
</footer>

@await RenderSectionAsync("Scripts", false)
<script defer>
    // Toggle mobile navigation
    document.getElementById('hamburger-menu').addEventListener('click', function () {
        document.getElementById('mobile-nav').classList.toggle('dropdown-active');
    });
</script>
</body>
</html>