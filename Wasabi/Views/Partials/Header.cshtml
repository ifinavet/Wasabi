@using Umbraco.Cms.Core.Security
@inherits UmbracoViewPage<Wasabi.ViewModels.HeaderViewModel>
@inject IMemberManager MemberManager;

@{
    IMemberManager? member = MemberManager;
}

<header class="header">
    <nav class="navbar">
        <div class="logo-container">
            <a href="#" class="logo">
                <img src="@Url.Content("/assets/Images/Logo_main.webp")" alt="IFI-Navet" class="logo-image"/>
            </a>
            <div class="nav-subtitle">
                <img src="@Url.Content("/assets/Images/Logo_text.webp")" alt="IFI-Navet" class="subtitle-image"/>
            </div>
        </div>

        <div class="desktop-nav">
            <ul>
                <li><a href="/arrangementer/">Arrangementer</a></li>
                <li><a href="/stillingsannonser/">Stillingsannonser</a></li>
                <li><a href="/eksterne-arrangementer/">Eksterne arrangementer</a></li>
                <li><a href="/si-ifra/">Si fra</a></li>
                <li class="dropdown">
                    <a href="#">Info</a>
                    <div class="dropdown-content">
                        <a href="/for-studenter/">For studenter</a>
                        <a href="/for-bedrifter/">For bedrifter</a>
                    </div>
                </li>
                <li class="dropdown">
                    <a href="#">Profil</a>
                    <div class="dropdown-content">
                        <a href="#">Min Profil</a>
                        <a href="#">Logg ut</a>
                    </div>
                </li>
            </ul>
        </div>

        <button class="hamburger" id="hamburger-menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="mobile-nav" id="mobile-nav">
            <ul>
                <li><a href="/arrangementer/">Arrangementer</a></li>
                <li><a href="/stillingsannonser/">Stillingsannonser</a></li>
                <li><a href="/eksterne-arrangementer/">Eksterne arrangementer</a></li>
                <li><a href="/si-ifra/">Si ifra</a></li>
                <li>
                    <div class="mobile-nav-title" id="info-dropdown-toggle">
                        <a href="#" onclick="event.preventDefault()">Info</a>
                        <span>▼</span>
                    </div>
                    <div class="mobile-dropdown" id="info-dropdown">
                        <a href="/for-studenter/">For studenter</a>
                        <a href="/for-bedrifter/">For bedrifter</a>
                    </div>
                </li>

                @if (!member.IsLoggedIn())
                {
                    <li><a href="/login/?redirectURL=@Model.PageUrl">Logg inn</a></li>
                }
                else
                {
                    <li>
                        <div class="mobile-nav-title" id="profile-dropdown-toggle">
                            <a href="#" onclick="event.preventDefault()">Profil</a>
                            <span>▼</span>
                        </div>
                        <div class="mobile-dropdown" id="profile-dropdown">
                            <a href="/profil/endre-profil/">@member.GetCurrentMemberAsync().Result!.Name</a>
                            <a href="/logout/">Logg ut</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>