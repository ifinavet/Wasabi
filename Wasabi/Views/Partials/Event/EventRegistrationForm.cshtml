@inherits UmbracoViewPage<Wasabi.ViewModels.Events.EventRegistrationFormViewModel>
@using Wasabi.Controllers.Events
@model Wasabi.ViewModels.Events.EventRegistrationFormViewModel

@using (Html.BeginUmbracoForm<EventRegistrationController>(nameof(EventRegistrationController.Register), FormMethod.Post, new { @class = "event-registration-form" }))
{
    <div class="event-registration">
        <div class="allergies">
            @Html.TextBoxFor(m => m.Allergie, new { @class = "allergies", placeholder = "Matallergier" })
            @Html.ValidationMessageFor(m => m.Allergie)
        </div>

        <button id="register-submit" type="submit" class="btn--sign-up"
                onclick="this.disabled = true; this.form.submit();">
            Meld meg p√•
        </button>
    </div>
}